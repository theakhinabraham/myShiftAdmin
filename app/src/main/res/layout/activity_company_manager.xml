<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:orientation="vertical"
    tools:context=".CompanyManager">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="226dp"
        android:text="Company ID:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Enter Company ID here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/removeCompany"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="106dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Remove Company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="31dp"
        android:text="Manage Companies"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/steps"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:backgroundTint="@color/white"
        android:layout_marginStart="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="56dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/removeCompany">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="How to get ID?" />

        <TextView
            android:id="@+id/firebaseRedirection"
            android:layout_width="250dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="1. Go to Firebase Console or click on step number 1 to be redirected." />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="250dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="2. Find the Person/Job Document." />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="250dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="3. Copy ID and paste here." />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="250dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="4. Click on Remove Button." />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>